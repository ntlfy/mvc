@{
    ViewBag.Title = "Đăng Nhập";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="author" content="Muhamad Nauval Azhar">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="description" content="This is a login page template based on Bootstrap 5">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
</head>
<body>
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-sm-center h-100">
                <div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9">
                    <div class="text-center my-5">
                        <img src="~/Images/logo.png" alt="logo" width="100">
                    </div>
                    <div class="card shadow-lg">
                        <div class="card-body p-5">
                            <h1 class="fs-4 card-title fw-bold mb-4">@ViewBag.Title</h1>
                            <p class="text-danger">@ViewBag.Error</p>
                            <form method="POST">
                                <div class="mb-3">
                                    <label class="mb-2 text-muted" for="email">Tên Tài Khoản</label>
                                    <input class="form-control" name="username" value="@ViewBag.username" required >
                                </div>

                                <div class="mb-3">
                                    <div class="mb-2 w-100">
                                        <label class="text-muted"  for="password">Mật Khẩu</label>
                                        <a href="#" class="float-end" onclick="quenmatkhau()">
                                            Quên Mật Khẩu?
                                        </a>
                                        <script>
                                            function quenmatkhau() {
                                                alert('Vui lòng liên hệ admin để đặt lại mật khẩu !');
                                            }
                                        </script>
                                    </div>
                                    <input id="password" type="password" class="form-control" name="password" required>
                                </div>

                                <div class="d-flex align-items-center">
                                    <div class="form-check">
                                        <input type="checkbox" name="remember" id="remember" class="form-check-input">
                                        <label for="remember" class="form-check-label">Luôn đăng nhập</label>
                                    </div>
                                    <button type="submit" class="btn btn-primary ms-auto">
                                        Đăng Nhập
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer py-3 border-0">
                            <div class="text-center">
                                Bạn Chưa Có Tài Khoản? <a  href="/AccountKhachHangs_63132244/Register_User" class="text-dark">Đăng Ký</a>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-5 text-muted">
                        Copyright &copy; @DateTime.Now.Year
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="js/login.js"></script>
</body>
</html>