<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">

    <!-- title -->
    <title>@ViewBag.TiTle</title>

    <!-- favicon -->
    <link class="" rel="shortcut icon" type="image/png" href="~/Images/logo.ico">
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="/assets/css/all.min.css">
    <!-- bootstrap -->
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <!-- owl carousel -->
    <link rel="stylesheet" href="/assets/css/owl.carousel.css">
    <!-- magnific popup -->
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
    <!-- animate css -->
    <link rel="stylesheet" href="/assets/css/animate.css">
    <!-- mean menu css -->
    <link rel="stylesheet" href="/assets/css/meanmenu.min.css">
    <!-- main style -->
    <link rel="stylesheet" href="/assets/css/main.css">
    <!-- responsive -->
    <link rel="stylesheet" href="/assets/css/responsive.css">

</head>
<body>

    <!--PreLoader-->
    <div class="loader">
        <div class="loader-inner">
            <div class="circle"></div>
        </div>
    </div>
    <!--PreLoader Ends-->
    <!-- header -->
    <div class="top-header-area" id="sticker">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12 text-center">
                    <div class="main-menu-wrap">
                        <!-- logo -->
                        <div class="site-logo">
                            <a href="/Home_63132244/Index">
                                <img  style="margin-top:-5%" src="~/Images/logo.png" alt="">
                            </a>
                        </div>
                        <!-- logo -->
                        <!-- menu start -->
                        <nav class="main-menu">
                            <ul>
                                <li class="current-list-item">
                                    <a href="/Home_63132244/Index">Trang Chủ</a>
                                </li>
                                <li><a href="/Home_63132244/About">Về Chúng Tôi</a></li>
                                <li><a href="/Home_63132244/Contact">Liên Hệ</a></li>
                                <li>
                                    <a href="/SanPhams_63132244/Index">Cửa Hàng</a>
                                </li>
                                <li>
                                    <div class="header-icons">
                                        <a class="shopping-cart" href="/SanPhams_63132244/Cart"><i class="fas fa-shopping-cart"></i></a>
                                        @if (Session["taikhoan"] == null)
                                        {
                                            <a class="mobile-hide " href="/AccountKhachHangs_63132244/Login_User"><i class="fas fa-user"></i></a>
                                        }
                                        else
                                        {
                                            <a class="mobile-hide" href="/HoaDons_63132244/GetHoaDon"><i class="fas fa-shipping-fast"></i></a>
                                            <a class="mobile-hide " href="/AccountKhachHangs_63132244/GetUserInfo">
                                                <i class="fas fa-user"></i>
                                                @{
                                                    var user = Session["taikhoan"] as Project_63132244.Models.KhachHang;
                                                    if (user != null)
                                                    {
                                                        <span>@user.MaKhachHang</span>
                                                    }
                                                }
                                            </a>
                                            <a class="mobile-hide" href="/AccountKhachHangs_63132244/Logout"><i class="fas fa-power-off"></i></a>
                                        }
                                    </div>
                                </li>
                            </ul>
                        </nav>
                        <div class="mobile-menu"></div>
                        <!-- menu end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end header -->
    <!-- search area -->
    <div class="search-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <span class="close-btn"><i class="fas fa-window-close"></i></span>
                    <div class="search-bar">
                        <div class="search-bar-tablecell">
                            <h3>Search For:</h3>
                            <input type="text" placeholder="Keywords">
                            <button type="submit">Search <i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end search area -->
    <!-- hero area -->
    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>@ViewBag.Title</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end hero area -->
    <!-- features list section -->
    
    <!-- end features list section -->
    <!-- product section -->
    <div class="product-section mt-150 mb-150">
        <div class="container" >
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- end product section -->
    <!-- footer -->
    <div class="footer-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box about-widget">
                        <h2 class="widget-title">Về Chúng Tôi</h2>
                        <p>
                            Chúng tôi tự hào mang đến cho bạn những trái cây tươi ngon và chất lượng cao.
                            Chúng tôi cam kết mang đến cho bạn những trái cây tươi ngon, giàu dinh dưỡng và an toàn. 
                            Hãy tham gia cùng chúng tôi và khám phá sự tươi ngon tự nhiên của trái cây, 
                            đem lại sức khỏe và hạnh phúc cho gia đình bạn
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box get-in-touch">
                        <h2 class="widget-title">Liên Hệ</h2>
                        <ul>
                            <li>Nguyễn Thành Luân</li>
                            <li>luan.nth.63cntt@ntu.edu.vn</li>
                            <li>+00 111 222 3333</li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box pages">
                        <h2 class="widget-title">Trang</h2>
                        <ul>
                            <li><a href="/Home_63132244/Index">Trang Chủ</a></li>
                            <li><a href="/Home_63132244/About">Về Chúng Tôi</a></li>
                            <li><a href="/SanPhams_63132244/Index">Cửa Hàng</a></li>
                            <li><a href="/Home_63132244/Contact">Liên Hệ</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="footer-box subscribe">
                        <h2 class="widget-title">Đăng Ký</h2>
                        <p>Đăng ký vào danh sách thành viên của chúng tôi để nhận được những cập nhật mới nhất.</p>
                        <form action="/AccountKhachHangs_63132244/Register_User">
                            <input type="email" placeholder="username@gmail.com">
                            <button type="submit"><i class="fas fa-paper-plane"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end footer -->
    <!-- copyright -->
    <div class="copyright">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <p>Copyrights &copy; @DateTime.Now.Year - <a href="#">Version 4.0</a></p>
                </div>
                <div class="col-lg-6 text-right col-md-12">
                    <div class="social-icons">
                        <ul>
                            <li><a href="https://www.facebook.com/NTL.FY" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="https://www.instagram.com/ntl.fy/" target="_blank"><i class="fab fa-instagram"></i></a></li>
                            <li><a href="https://github.com/nanjo-san/" target="_blank"><i class="fab fa-github"></i></a></li>
                            <li><a href="https://www.facebook.com/messages/t/100011365218974" target="_blank"><i class="fab fa-facebook-messenger"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end copyright -->
    <!-- jquery -->
    <script src="/assets/js/jquery-1.11.3.min.js"></script>
    <!-- bootstrap -->
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <!-- count down -->
    <script src="/assets/js/jquery.countdown.js"></script>
    <!-- isotope -->
    <script src="/assets/js/jquery.isotope-3.0.6.min.js"></script>
    <!-- waypoints -->
    <script src="/assets/js/waypoints.js"></script>
    <!-- owl carousel -->
    <script src="/assets/js/owl.carousel.min.js"></script>
    <!-- magnific popup -->
    <script src="/assets/js/jquery.magnific-popup.min.js"></script>
    <!-- mean menu -->
    <script src="/assets/js/jquery.meanmenu.min.js"></script>
    <!-- sticker js -->
    <script src="/assets/js/sticker.js"></script>
    <!-- main js -->
    <script src="/assets/js/main.js"></script>
</body>
</html>