<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/Areas/Admin_63132244/Content/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/Areas/Admin_63132244/Content/assets/vendors/css/vendor.bundle.base.css">
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/Areas/Admin_63132244/Content/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/Images/logo.ico" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="/Admin_63132244/AdminSanPhams_63132244/Index"><img src="~/Images/logo.png" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="/Admin_63132244/AdminSanPhams_63132244/Index"><img style="width:50%" src="~/Images/logo-mini.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <ul class="navbar-nav navbar-nav-right">
                    <li class="nav-item nav-profile dropdown">
                        <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="nav-profile-img">
                                <img src="~/Images/default.png" alt="image">
                                <span class="availability-status online"></span>
                            </div>
                            <div class="nav-profile-text">
                                <p class="mb-1 text-black">
                                    @{
                                        var user = Session["taikhoan"] as Project_63132244.Models.QuanTri;
                                        if (user != null)
                                        {
                                            <span>@user.TaiKhoan</span>
                                        }
                                    }

                                </p>
                            </div>
                        </a>
                        <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/AccountKhachHangs_63132244/Login_User">
                                <i class="mdi mdi-logout me-2 text-primary"></i> Đăng Xuất
                            </a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            <div class="nav-profile-image">
                                <img src="~/Images/default.png" alt="profile">
                                <span class="login-status online"></span>
                                <!--change to offline or busy as needed-->
                            </div>
                            <div class="nav-profile-text d-flex flex-column">
                                <span class="font-weight-bold mb-2">
                                    @{
                                        user = Session["taikhoan"] as Project_63132244.Models.QuanTri;
                                        if (user != null)
                                        {
                                            <span>@user.TaiKhoan</span>
                                        }
                                    }
                                </span>
                                <span class="text-secondary text-small">Admin</span>
                            </div>
                            <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin_63132244/AdminSanPhams_63132244/Index">
                            <span class="menu-title">Sản Phẩm</span>
                            <i class="mdi mdi-fridge menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item menu-tiem">
                        <style>
                            .menu-tiem .nav {
                                display: none;
                            }

                            .menu-tiem:hover .nav {
                                display: block;
                            }
                        </style>
                        <a class="nav-link" data-bs-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
                            <span class="menu-title">Chức Năng</span>
                            <i class="menu-arrow"></i>
                            <i class="mdi mdi-settings menu-icon"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" href="/Admin_63132244/AdminQuanTris_63132244/Index">Quản Lý Quyền Quản Trị</a></li>
                                <li class="nav-item"> <a class="nav-link" href="/Admin_63132244/AdminQuanTris_63132244/Create">Thêm Tài Khoản Quản Trị</a></li>
                                <li class="nav-item"> <a class="nav-link" href="/Admin_63132244/AdminSanPhams_63132244/Create">Thêm Mới Sản Phẩm</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin_63132244/AdminKhachHangs_63132244/Index">
                            <span class="menu-title">Khách Hàng</span>
                            <i class="mdi mdi-contacts menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin_63132244/AdminHoaDons_63132244/Index">
                            <span class="menu-title">Đơn Hàng</span>
                            <i class="mdi mdi-table-large menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Admin_63132244/AdminQuestion_63132244/Index">
                            <span class="menu-title">Hỗ Trợ Khách Hàng</span>
                            <i class="mdi mdi-help menu-icon"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="">
                    @RenderBody()
                </div>
                <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid d-flex justify-content-between">
                        <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright © @DateTime.Now.Year</span>
                        <span class="float-none float-sm-end mt-1 mt-sm-0 text-end"> <a href="https://www.facebook.com/NTL.FY" target="_blank">Nguyễn Thành Luân</a></span>
                    </div>
                </footer>
            </div>
        </div>
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/Areas/Admin_63132244/Content/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/Areas/Admin_63132244/Content/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/Areas/Admin_63132244/Content/assets/js/jquery.cookie.js" type="text/javascript"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/Areas/Admin_63132244/Content/assets/js/off-canvas.js"></script>
    <script src="~/Areas/Admin_63132244/Content/assets/js/hoverable-collapse.js"></script>
    <script src="~/Areas/Admin_63132244/Content/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="~/Areas/Admin_63132244/Content/assets/js/dashboard.js"></script>
    <script src="~/Areas/Admin_63132244/Content/assets/js/todolist.js"></script>
    <!-- End custom js for this page -->
</body>
</html>