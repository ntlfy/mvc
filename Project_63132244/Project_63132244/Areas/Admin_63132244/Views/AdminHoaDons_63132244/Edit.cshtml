@model Project_63132244.Models.HoaDon
@{
    ViewBag.Title = "Chỉnh Sửa Hóa Đơn";
    Layout = "~/Areas/Admin_63132244/Views/Shared/AdminLayout63132244.cshtml";
}

@using (Html.BeginForm("Edit", "AdminHoaDons_63132244", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h4 class="text-center text-primary">@ViewBag.Title </h4>
    <hr />
    @Html.AntiForgeryToken()
    <div class="form-horizontal " style="margin-left:80px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group d-flex">
            @Html.LabelFor(model => model.Ma_HoaDon, "Mã Đơn Hàng", htmlAttributes: new { @class = "control-label  col-md-1" })
            <div class=" col-md-11">
                @Html.EditorFor(model => model.Ma_HoaDon, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Ma_HoaDon, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group d-flex mb-3 mt-1">
            @Html.LabelFor(model => model.PhuongThuc_ThanhToan, "Giới Tính :", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class=" col-md-11">
                <div class="checkbox">
                    @Html.RadioButtonFor(model => model.PhuongThuc_ThanhToan, "True", new { @checked = "checked" }) Thanh Toán QR &nbsp;
                    @Html.RadioButtonFor(model => model.PhuongThuc_ThanhToan, "False") Thanh Toán Khi Nhận Hàng
                    @Html.ValidationMessageFor(model => model.PhuongThuc_ThanhToan, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group d-flex">
            @Html.LabelFor(model => model.NgayGiao, "Ngày Giao :", htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-11">
                @Html.TextBoxFor(model => model.NgayGiao, "{0:MM/dd/yyyy}", new { @class = "form-control datepicker", required = "required" })
                @Html.ValidationMessageFor(model => model.NgayGiao, "", new { @class = "text-danger"})
            </div>
        </div>
        <div class="form-group d-flex">
            @Html.LabelFor(model => model.DiaChi, "Địa Chỉ Nhận Hàng", htmlAttributes: new { @class = "control-label  col-md-1" })
            <div class=" col-md-11">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group d-flex justify-content-center align-items-center" style="margin-left:4.5%">
            <div class="col-md-offset-2  col-md-11">
                <input type="submit" value="Thêm Mới" class="btn btn-primary mt-2" />
            </div>
        </div>
    </div>
}

<div style="margin-left:3% ; margin-top : 2% ; margin-bottom:1%">
    <style>
        a {
            text-decoration: none;
        }
    </style>
    @Html.ActionLink("Quay Lại", "Index")
</div>

